<UserControl x:Class="EchoBranch.Views.SpotifyPlaylistAxaml"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:EchoBranch.Views"
             xmlns:echoBranch="clr-namespace:EchoBranch"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="views:SpotifyPlaylistAxaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="SongTemplate" DataType="echoBranch:SongViewModel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" Foreground="White" />
                    <TextBlock Text="{Binding Artist}" Foreground="White" />
                    <TextBlock Text="{Binding Album}" Foreground="White" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <ListBox x:Name="PlaylistListBox" ItemTemplate="{StaticResource SongTemplate}">
    </ListBox>
</UserControl>